# Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=10000
SERVER_HOST=0.0.0.0

# WhatsApp Configuration
GROUP_CHAT_ID=your_group_chat_id_here
WHATSAPP_SESSION_NAME=devocional-bot

# Puppeteer Configuration (for production)
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true

# Optional: Disable WhatsApp in production if needed
# DISABLE_WHATSAPP=true

# Scheduling Configuration
SEND_TIME=07:00
TIMEZONE=America/Sao_Paulo

# Data Configuration
DATA_PATH=./data/leituras.json

# Tokens Directory (optional, defaults to system temp)
TOKENS_DIR=/tmp

# Debug Configuration
DEBUG=false
