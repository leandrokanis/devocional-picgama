{
  "name": "devocional-picgama",
  "version": "1.0.0",
  "description": "Bot automatizado para envio diário de textos bíblicos devocionais via WhatsApp",
  "main": "dist/index.js",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch run src/index.ts",
    "dev:hot": "bun --watch --hot run src/index.ts",
    "docker:dev": "./docker-dev.sh",
    "docker:dev:build": "NODE_ENV=development DOCKERFILE=Dockerfile.dev docker compose build",
    "docker:dev:up": "NODE_ENV=development DOCKERFILE=Dockerfile.dev docker compose up",
    "docker:dev:down": "docker compose down",
    "build": "bun install --frozen-lockfile && bun x tsc -p tsconfig.build.json && cp src/swagger.json dist/swagger.json 2>/dev/null || true && cp -r data dist/ 2>/dev/null || true",
    "start": "bun dist/index.js",
    "test": "bun test",
    "send": "bun run src/index.ts send",
    "postinstall": "echo 'Dependencies installed successfully'"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.3",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@wppconnect-team/wppconnect": "^1.37.8",
    "dotenv": "^17.2.3",
    "lodash": "^4.17.21",
    "node-cron": "^4.2.1"
  }
}
