{
  "name": "devocional-picgama",
  "version": "1.0.0",
  "description": "Bot automatizado para envio diário de textos bíblicos devocionais via WhatsApp",
  "main": "dist/index.js",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch --hot run src/index.ts",
    "build": "bun install --frozen-lockfile && bun x tsc -p tsconfig.build.json && cp src/swagger.json dist/swagger.json 2>/dev/null || true && cp -r data dist/ 2>/dev/null || true",
    "start": "bun dist/index.js",
    "test": "bun test ./src",
    "send": "bun run src/index.ts send",
    "docker:dev": "./docker-dev.sh",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:build": "docker compose build",
    "docker:restart": "docker compose restart",
    "postinstall": "echo 'Dependencies installed successfully'"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.3",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@types/qrcode": "^1.5.6",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "dotenv": "^17.2.3",
    "lodash": "^4.17.21",
    "node-cron": "^4.2.1",
    "pino": "^10.1.0",
    "qrcode": "^1.5.4"
  }
}
